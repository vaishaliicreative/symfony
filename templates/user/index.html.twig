{% extends 'base.html.twig' %}

{% block title %}User List{% endblock %}

{% block body %}

<div class="example-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card bg-light mb-3 mt-3">
                    <div class="card-body">
                        <div class="card-header">List of users</div>
                            <table class="table">
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone Number</th>
                                    <th>Gender</th>
                                    <th>Hobbies</th>
                                    <th>Image</th>
                                    <th>Action</th>
                                </tr>
                                {% for user in users %}
                                    <tr>
                                        <td>{{ user.name }}</td>
                                        <td>{{ user.email }}</td>
                                        <td>{{ user.phoneNumber }}</td>
                                        <td>{{ user.gender }}</td>
                                        <td>
                                            {% for hobby in user.hobbies %}
                                                <span>{{ hobby }}</span>
                                            {% endfor %}
                                        </td>
                                        <td>
                                            {% if(user.profileImage != '') %}
                                                <img src="{{ asset('uploads/profile/'~user.profileImage) }}" width="100px"/>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <a class="btn btn-success" href="{{ path('app_user_show', {'id': user.id}) }}">Show</a>
                                            <a class="btn btn-primary" href="{{ path('app_user_edit', {'id': user.id}) }}">Edit</a>
                                            <a class="btn btn-danger" class="deleteBtn" href="{{ path('app_userDelete', {'id': user.id}) }}" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
{#                                            <button class="btn btn-danger" class="deleteBtn" onclick="deleteUser({{ user.id }},'{{ csrf_token('delete' ~ user.id) }}')">Delete</button>#}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    <script>

    </script>
{% endblock %}
