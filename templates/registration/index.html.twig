{% extends 'base.html.twig' %}

{% block title %}Registration Form{% endblock %}

{% block body %}
    <style>
        /*.example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }*/
        /*.example-wrapper code { background: #F5F5F5; padding: 2px 6px; }*/
        .invalid-feedback{
            display: block;
        }
        .invalid-feedback ul{
            list-style: none;
            margin-top: 0;
            font-size: .875em;
            color: #dc3545;
            margin-bottom: 0;
            padding-left: 0;
        }
    </style>

    <div class="example-wrapper">
        <section class="vh-100" style="background-color: #eee;">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-lg-12 col-xl-11">
                        <div class="card text-black" style="border-radius: 10px;" >
                            <div class="card-body p-md-5">
                                <div class="col-md-10 col-lg-9 order-2 order-lg-1">
                                    <h5 class="card-title text-center">Registration Form</h5>
                                    {{ form_start(form,{'attr':{'novalidate':'novalidate','class':'mx-1 mx-md-4'}}) }}
                                    <div class="row mb-3">
                                        <div class="col-md-3">
                                            {{ form_label(form.name) }}
                                        </div>
                                        <div class="col-md-9">
                                            {{ form_widget(form.name,{'attr':{'class':'form-control'}}) }}
                                            <div class="invalid-feedback">
                                                {{ form_errors(form.name) }}
                                            </div>
                                        </div>

                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-3">
                                            {{ form_label(form.email) }}
                                        </div>
                                        <div class="col-md-9">
                                            {{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}
                                            <div class="invalid-feedback">
                                                {{ form_errors(form.email) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-3">
                                            {{ form_label(form.password.first) }}
                                        </div>
                                        <div class="col-md-9">
                                            {{ form_widget(form.password.first,{'attr':{'class':'form-control'}}) }}
                                            <div class="invalid-feedback">
                                                {{ form_errors(form.password.first) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-3">
                                            {{ form_label(form.password.second) }}
                                        </div>
                                        <div class="col-md-9">
                                            {{ form_widget(form.password.second,{'attr':{'class':'form-control'}}) }}
                                            <div class="invalid-feedback">
                                                {{ form_errors(form.password) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-3">
                                            {{ form_label(form.roles) }}
                                        </div>
                                        <div class="col-md-9">
                                            {{ form_widget(form.roles,{'attr':{'class':'form-select'}}) }}
                                            <div class="invalid-feedback">
                                                {{ form_errors(form.roles) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-3">
                                            {{ form_label(form.phone_number) }}
                                        </div>
                                        <div class="col-md-9">
                                            {{ form_widget(form.phone_number,{'attr':{'class':'form-control'}}) }}
                                            <div class="invalid-feedback">
                                                {{ form_errors(form.phone_number) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-3">
                                            {{ form_label(form.gender) }}
                                        </div>
                                        <div class="col-md-9">
                                            {{ form_widget(form.gender) }}
                                            <div class="invalid-feedback">
                                                {{ form_errors(form.gender) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-3">
                                            {{ form_label(form.profile_image) }}
                                        </div>
                                        <div class="col-md-9">
                                            {{ form_widget(form.profile_image,{'attr':{'class':'form-control'}}) }}
                                            <div class="invalid-feedback">
                                                {{ form_errors(form.profile_image) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-3">
                                            {{ form_label(form.hobbies) }}
                                        </div>
                                        <div class="col-md-9">
                                            {{ form_widget(form.hobbies) }}
                                            <div class="invalid-feedback">
                                                {{ form_errors(form.hobbies) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                            {#                                        <button type="button" class="btn btn-primary btn-lg">Register</button>#}
                                            {{ form_widget(form.save,{'attr':{'class':'btn btn-primary'}}) }}
                                        </div>
                                    </div>
                                    {{ form_end(form) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </section>

    </div>
{% endblock %}